<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/tv_edit_secretview"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="44dp"
            android:layout_marginBottom="44dp"
            android:text="Text" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout4">
        <RelativeLayout
            android:id="@+id/my_bot"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:weightSum="1">


            <Button
                android:id="@+id/btn_edit_me"
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="Me"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="46dp"
                android:layout_marginEnd="46dp" />

            <Button
                android:id="@+id/btn_edit_home"
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="Home"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="46dp"
                android:layout_marginStart="46dp" />
        </RelativeLayout>

        <Button
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_edit_delete"
            android:text="Delete"
            android:textAllCaps="false"
            android:layout_alignBaseline="@+id/btn_edit_edit"
            android:layout_alignBottom="@+id/btn_edit_edit"
            android:layout_alignLeft="@+id/btn_edit_edit"
            android:layout_alignStart="@+id/btn_edit_edit" />

        <Button
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:id="@+id/btn_edit_edit"
            android:textAllCaps="false"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>


</RelativeLayout>