<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.lovej.secretkeeper.LoginPage"
    android:weightSum="1">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:src="@drawable/secretlogo"
        android:gravity="center"
        android:layout_above="@+id/login_et_username"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:id="@+id/login_et_password"
        android:hint="Enter your password"
        android:textSize="14dp"
        android:singleLine="true"
        android:maxLength="20"
        android:inputType="textPassword"
        android:layout_below="@+id/login_et_username"
        android:layout_centerHorizontal="true" />



    <EditText
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:singleLine="true"
        android:maxLength="20"
        android:hint="Enter your username"
        android:textSize="14dp"
        android:id="@+id/login_et_username"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/login_et_password"
        android:layout_alignStart="@+id/login_et_password"
        android:layout_alignRight="@+id/login_et_password"
        android:layout_alignEnd="@+id/login_et_password" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textAllCaps="false"
        android:id="@+id/login_btn_login"
        android:layout_below="@+id/login_et_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don&apos;t have an account? Click here to register"
        android:id="@+id/login_btn_register"
        android:textAllCaps="false"
        android:background="#00000000"
        android:textColor="#C4C4C4"
        android:layout_below="@+id/login_btn_login"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display password"
        android:id="@+id/login_checkbox_showPwd"
        android:layout_below="@+id/login_et_password"
        android:layout_alignLeft="@+id/login_et_password"
        android:layout_alignStart="@+id/login_et_password"
        android:checked="false" />


</RelativeLayout>
